# You can use these variables anywhere in the mako configuration file.

background-color=#303030
text-color=#d0d0d0
border-color=#d0d0d0

layer=top
anchor=bottom-right
border-radius=5
default-timeout=10000
height=500
width=400

[hidden]
format=(and %h more)
text-color=#777777

[urgency=high]
background-color=#eb008a
text-color=#e0e0e0
border-color=#d0d0d0
default-timeout=0

[urgency=low]
background-color=#202020
text-color=#505050
border-color=#d0d0d0
default-timeout=5000
